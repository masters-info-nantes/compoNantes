grammar org.xtext.example.compoNantes.MyDsl with org.eclipse.xtext.common.Terminals

generate myDsl "http://www.xtext.org/example/compoNantes/MyDsl"

Model:
	systems+=System*;
	
System:
	'system' name=ID '{'
		components+=Component*
		connectors+=Connector*
	'}'
;

Component:
	'component' name=ID '{'
		interfaces+=Interface*
		ports+=Port*
		dependancies+=Dependancy*
		usages+=Usage*
	'}'
;

Connector:
	'connector' name=ID '{'
		components+=Component*
	'}'
;
	
Interface:
	'interface' type=Type name=ID
;
	
Port:
	'port' name=ID
;
	
Dependancy:
	'depends of' component = Component
;

Usage:
	'uses' component = Component
;
enum Type:
	REQUIRED='required' | PROVIDED='provided'
;